<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/item_home_time_ago"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/item_home_image"
                android:layout_margin="16dp"
                android:text="20년 전"
                android:textSize="26dp"
                android:textColor="@color/colorMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:text="2000.00.00"
                android:textSize="14dp"
                android:id="@+id/item_home_date"
                app:layout_constraintBottom_toBottomOf="@id/item_home_time_ago"
                app:layout_constraintStart_toEndOf="@id/item_home_time_ago"
                android:layout_marginStart="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <ImageView
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/item_home_time_ago"
                android:id="@+id/item_home_image"
                android:layout_width="match_parent"
                android:layout_height="260dp"/>

        <TextView
                android:layout_marginStart="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_home_image"
                app:layout_constraintBottom_toTopOf="@id/item_home_score_lay"
                android:id="@+id/item_home_hash_tag"
                android:text="#우리가 열광했던"
                android:textSize="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <android.support.constraint.ConstraintLayout
                android:background="@drawable/sqaure_blue_view"
                android:layout_marginTop="10dp"
                android:paddingVertical="40dp"
                app:layout_constraintTop_toBottomOf="@id/item_home_hash_tag"
                android:id="@+id/item_home_score_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/item_home_score_description"
                    android:text="REACTIVE 평점"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/item_home_score_view_lay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/colorMain"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginVertical="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_home_score_description"
                    app:layout_constraintBottom_toTopOf="@id/item_home_score_tv"
                    android:id="@+id/item_home_score_view_lay"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/first_score_view"
                        android:background="@drawable/gray_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/second_score_view"
                        android:background="@drawable/gray_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/third_score_view"
                        android:background="@drawable/gray_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/forth_score_view"
                        android:background="@drawable/gray_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/fifth_score_view"
                        android:background="@drawable/gray_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
            </LinearLayout>

            <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_home_score_view_lay"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="4.0"
                    android:textSize="12dp"
                    android:id="@+id/item_home_score_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.v7.widget.RecyclerView
                android:paddingHorizontal="8dp"
                android:paddingVertical="14dp"
                app:layout_constraintTop_toBottomOf="@id/item_home_score_lay"
                android:id="@+id/item_home_comment_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <android.support.constraint.ConstraintLayout
                android:id="@+id/item_home_send_lay"
                app:layout_constraintTop_toBottomOf="@id/item_home_comment_list"
                android:background="@drawable/sqaure_blue_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <EditText
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/comment_send_tv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/comment_edit"
                    android:padding="10dp"
                    android:background="@null"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"/>
            <TextView
                    android:layout_marginHorizontal="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/comment_send_tv"
                    android:text="보내기"
                    android:textSize="8dp"
                    android:textColor="@color/colorMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
                android:layout_marginTop="10dp"
                android:paddingVertical="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/item_home_send_lay"
                android:id="@+id/item_home_myscore_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/item_home_myscore_description"
                    android:text="평가하기"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/item_home_myscore_view_lay"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/colorMain"
                    android:textSize="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginVertical="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_home_myscore_description"
                    app:layout_constraintBottom_toTopOf="@id/item_home_myscore_tv"
                    android:id="@+id/item_home_myscore_view_lay"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/first_myscore_view"
                        android:background="@drawable/white_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/second_myscore_view"
                        android:background="@drawable/white_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/third_myscore_view"
                        android:background="@drawable/white_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/forth_myscore_view"
                        android:background="@drawable/white_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
                <View
                        android:layout_marginHorizontal="8dp"
                        android:id="@+id/fifth_myscore_view"
                        android:background="@drawable/white_circle_view"
                        android:layout_width="34dp"
                        android:layout_height="34dp"/>
            </LinearLayout>

            <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/item_home_myscore_view_lay"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="0.0"
                    android:textSize="12dp"
                    android:id="@+id/item_home_myscore_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.constraint.ConstraintLayout>

</ScrollView>